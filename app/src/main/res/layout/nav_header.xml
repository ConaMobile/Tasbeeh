<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:paddingTop="30dp"
    android:scrollbarAlwaysDrawHorizontalTrack="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/background_color"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginVertical="20dp"
            android:background="@color/teal_200">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/icon_item1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_color"
                android:backgroundTint="#3D3E50"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:scaleType="centerCrop"
                android:src="@drawable/splash_image2"
                app:strokeColor="@color/white"
                app:strokeWidth="5dp"
                tools:ignore="UnusedAttribute" />

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#C6553CE8"
                android:clickable="false"
                android:src="@drawable/selected_png"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/circle"
                app:strokeColor="@color/white" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/selectorImg1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#C6553CE8"
                android:clickable="false"
                android:src="@drawable/selected_png"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/circle"
                app:strokeColor="@color/white" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginVertical="20dp"
            android:background="@color/teal_200">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/icon_item2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_color"
                android:backgroundTint="#3D3E50"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:scaleType="centerCrop"
                android:src="@drawable/splash_image1"
                app:strokeColor="@color/white"
                tools:ignore="UnusedAttribute" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/selectorImg2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#C6553CE8"
                android:clickable="false"
                android:src="@drawable/selected_png"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/circle"
                app:strokeColor="@color/white" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginVertical="20dp"
            android:background="@color/teal_200">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/icon_item3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_color"
                android:backgroundTint="#3D3E50"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:scaleType="centerCrop"
                android:src="@drawable/splash_image3"
                app:strokeColor="@color/white"
                tools:ignore="UnusedAttribute" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/selectorImg3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#C6553CE8"
                android:clickable="false"
                android:src="@drawable/selected_png"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/circle"
                app:strokeColor="@color/white" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginVertical="20dp"
            android:background="@color/teal_200">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/icon_item4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_color"
                android:backgroundTint="#3D3E50"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:scaleType="centerCrop"
                android:src="@drawable/splash_image4"
                app:strokeColor="@color/white"
                tools:ignore="UnusedAttribute" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/selectorImg4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#C6553CE8"
                android:clickable="false"
                android:src="@drawable/selected_png"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/circle"
                app:strokeColor="@color/white" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginVertical="20dp"
            android:background="@color/teal_200">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/icon_item5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_color"
                android:backgroundTint="#3D3E50"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:scaleType="centerCrop"
                android:src="@drawable/splash_images"
                app:strokeColor="@color/white"
                tools:ignore="UnusedAttribute" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/selectorImg5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#C6553CE8"
                android:clickable="false"
                android:src="@drawable/selected_png"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/circle"
                app:strokeColor="@color/white" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>